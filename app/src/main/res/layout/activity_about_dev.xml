<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_dev">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER TENTANG APLIKASI -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Background Ungu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:background="@color/about_dev"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urbanistregular"
                    android:lineSpacingExtra="7dp"
                    android:padding="30dp"
                    android:text="About\nDev"
                    android:textColor="@color/text"
                    android:textSize="36sp" />
            </LinearLayout>

            <!-- Dekorasi sudut kanan atas -->
            <ImageView
                android:layout_width="170dp"
                android:layout_height="250dp"
                android:layout_gravity="top|end"
                android:contentDescription="Header Decoration"
                android:scaleType="fitXY"
                android:src="@drawable/asset" />
        </FrameLayout>

        <!-- CARD CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:background="@drawable/rounded_top_white"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- CARD 1: Desc -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanistregular"
                android:lineSpacingExtra="3dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanistregular"
                        android:lineSpacingExtra="3dp"
                        android:text="Created by Silvira Asterifolia\nNIM 221351144"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
